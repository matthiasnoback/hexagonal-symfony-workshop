{% extends "base.html.twig" %}

{% block body %}
    <h2><span class="task-task">{{ task.task }}</span></h2>
    <small class="text-muted task-due-date">Due date: {{ task.dueDate|date('Y-m-d') }}</small>

    {% for note in task.notes %}
    <div class="card task-note mb-3 mt-3" data-id="{{ note.id }}">
        <div class="card-body">
            <span class="note-note">{{ note.note }}</span>
        </div>
    </div>
    {% endfor %}

    <p><a href="{{ path('task_add_note', { id: task.id }) }}" class="btn btn-primary">Add a note</a></p>
{% endblock %}
